import random

def guess_the_number():
    number_to_guess= random.randiant (1,10)
    attempts =0


    print("welcome to the guess the random number game")
    print("i have a number between 1 to 10 . try to guess it!")

    while True:
        guess=int(input("enter your guess: "))
        attempts += 1


        if guess < number_to_guess :
            print("the value is too low! please try again")
        elif guess > number_to_guess:
            print("the value is too high! please try again")
        else:
            print(f"Congratulations! You've guessed the number in {attempts} attempts!")
            break

guess_the_number()
